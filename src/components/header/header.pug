- const activeClass = (url) => pageUrl === url ? 'active' : ''
- const pages = [{ url: '/', text: 'Inicio'},{ url: '/contacto', text: 'Contacto'},{ url: '/sobremi', text: 'Sobre Mí'}]

header.main-header
  h1
    a(href="/" class="logo")
      img(src="/favicon.ico")
      | Miguel Nutrición
  ul
    each page in pages
      li(class=activeClass(page.url))
        a(href=page.url)= page.text
